  link(rel="stylesheet", href="assets/styles/main.css", type="text/css")
 

  body

    div.wrapper

       header.header
         a(href="/")
          img.logo(src='assets/images/logo.png')

          ul.nav

            li: a(href="/") Home

            li: a(href="/about") About
            
            li: a(href="/portfolio") Portfolio
               
            li: a(href="/contact") Contact 
         
